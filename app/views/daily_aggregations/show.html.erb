<h3><%= "#{@daily_aggregation.date} [#{@daily_aggregation.sort}] #{t(:product_info)}#{t(:list)}"%></h3>

<table>
  <tr>
    <th>No.</th>
    <th><%= t(:product_title) %></th>
    <th><%= t(:product_image) %></th>
    <th><%= t(:description) %></th>
    <th><%= t(:price) %></th>
  </tr>
  <%
    row_num = 1
    @products.each do |product|
   %>
    <tr>
      <td><%= row_num %></td>
      <td><%= product["title"] %></td>
      <td><%= product["image"] %></td>
      <td><%= product["description"] %></td>
      <td><%= product["price"] %></td>
    </tr>
   <%
      row_num += 1
    end
   %>
</table>

<%= link_to t(:back), daily_aggregations_path %>
