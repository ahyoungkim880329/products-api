<%= form_for @product do |f| %>
  <p>
    <%= f.label :title, t(:product_title) %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :image, t(:product_image) %><br>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.label :description, t(:description) %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :price, t(:price) %><br>
    <%= f.text_field :price %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>
