<h1><%= t(:page_title_index) %></h1>

<p><%= link_to t(:create), new_product_path %></p>

<table>
  <tr>
    <th><%= t(:product_title) %></th>
    <th><%= t(:price) %></th>
  </tr>
  <tr>
    <% @products.each do |product| %>
      <tr>
        <td><%= product["title"] %></td>
        <td><%= product["price"] %></td>
        <td><%= link_to t(:show), product_path(product["id"]) %></td>
        <td><%= link_to t(:edit), edit_product_path(product["id"]) %></td>
        <td><%= link_to t(:delete), product_path(product["id"]),
                method: :delete,
                data: { confirm: t(:confirm_msg) } %></td>
      </tr>
    <% end %>
  </tr>
</table>
